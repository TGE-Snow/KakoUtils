{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "lib",
    "rootDir": "lib",
  },
  "include": ["lib/**/*.ts", "lib/**/*.d.ts", "lib/**/*.tsx", "lib/**/*.vue", "lib/Prototype/index.js", "lib/KMath.js", "lib/index.js", "lib/Utils/index.js", "lib/WatchStatus.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
